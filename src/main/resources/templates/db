create table person (
    person_id integer primary key generated by default as identity ,
    name varchar(100),
    img varchar(1000),
    telephone varchar(100) unique,
    password varchar(1000),
    block boolean,
    person_role varchar(100),
    experience integer,
    points integer
);

create table placement(
    placement_id integer primary key generated by default as identity,
        address varchar(1000)
);

create table bord_count(
    title_id varchar(1000) primary key  ,
    count integer,
    video varchar(1000),
    img varchar(1000),
    description varchar(10000),
    min_price integer
);

drop table bord_count;
drop table placement;
create table bord_game(
    game_id integer primary key generated by default as identity (START WITH 100001),
    title varchar(100),
    img varchar(1000),
    price numeric,
    is_use boolean,
    placement_id integer references placement(placement_id)
);

drop table bord_game;
drop table  bord_game;

create table achievement(
    achievement_id integer primary key generated by default as identity ,
    title varchar(1000),
    description varchar(10000),
    img varchar(10000)
);

drop  table achievement;
drop table person;


create  table achievement_person(
    person_id integer references person(person_id),
    achievement_id integer references achievement(achievement_id)
)

drop table achievement_person;

drop table operations;

create table operations(
    operation_id integer primary key generated by default as identity ,
    game_id integer references bord_game(game_id),
    person_id integer references person(person_id),
    operator_id integer references person(person_id),
    time_issuance timestamp,
    time_deadline  timestamp,
    time_return timestamp
);


create table reservation
(
    reservation_id integer primary key generated by default as identity ,
    game_id integer references bord_game(game_id),
    person_id integer references person(person_id),
    date_reservation date,
    how_long timestamp
);
drop table  operations